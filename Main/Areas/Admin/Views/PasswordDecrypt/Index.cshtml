@model DecryptionDto


<div class="text-center my-4">
    <h6 class="display-6">Password Decryption</h6>
</div>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div>
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>
        <form method="post" asp-action="Index">

            <div class="form-group my-3">
                <label asp-for="Email">E-mail</label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group my-3 d-flex justify-content-center">
                <button type="submit" class="btn btn-secondary">Åžifreyi Al</button>
            </div>

            <div class="form-group my-3">
                <label asp-for="EncryptedPassword">Encrypted Password</label>
                <input asp-for="EncryptedPassword" class="form-control" value="@(string.IsNullOrEmpty(Model.DecryptedPassword) ? Model.EncryptedPassword : Model.DecryptedPassword)" />
            </div>
        </form>

        <form method="post" asp-action="Decrypt">
            <input type="hidden" name="EncryptedPassword" value="@Model.EncryptedPassword" />
            <input type="hidden" asp-for="Email" />
            <div class="form-group my-3 d-flex justify-content-center">
                <button type="submit" class="btn btn-secondary">Decrypt</button>
            </div>
        </form>
    </div>
</div>
