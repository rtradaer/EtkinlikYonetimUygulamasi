@model RegisterDto

<div class="text-center my-4">
    <h6 class="display-6">Kayıt Ol</h6>
</div>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div>
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>
        <form method="post" asp-action="Register">
            
            <div class="form-group my-3">
                <label asp-for="FirstName">İsim</label>
                <input asp-for="FirstName" class="form-control" />
            </div>

            <div class="form-group my-3">
                <label asp-for="LastName">Soyisim</label>
                <input asp-for="LastName" class="form-control" />
            </div>

            <div class="form-group my-3">
                <label asp-for="Email">E-mail</label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group my-3">
                <label asp-for="Password">Şifre</label>
                <input type="password" asp-for="Password" class="form-control" />
            </div>

            <div class="form-group my-3">
                <label asp-for="ConfirmPassword">Şifre Doğrulama</label>
                <input type="password" asp-for="ConfirmPassword" class="form-control" />
            </div>

            <div class="form-group my-3">
                <label asp-for="BirthDate">Doğum Tarihi</label>
                    <input type="date" asp-for="BirthDate" class="form-control" min="1900-01-01" max="@DateTime.Now.ToString("yyyy-MM-dd")" />
            </div>

            <div class="form-group my-3 d-flex justify-content-center">
                <button type="submit" class="btn btn-secondary">Kayıt Ol</button>
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>