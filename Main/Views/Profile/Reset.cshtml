@model ResetPasswordDto

<div class="text-center my-4">
    <h6 class="display-6">Parolayı Değiştir</h6>
</div>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div>
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>
        <form method="post" asp-action="Index">
            
            <input type="hidden" asp-for="Email" /> @*asp-route-id="@Model.Email"*@

            <div class="form-group my-3">
                <label asp-for="CurrentPassword">Mevcut Şifre</label>
                <input asp-for="CurrentPassword" class="form-control" />
            </div>

            <div class="form-group my-3">
                <label asp-for="Password">Yeni Şifre</label>
                <input asp-for="Password" class="form-control" />
            </div>

            <div class="form-group my-3">
                <label asp-for="ConfirmPassword">Yeni Şifreyi Doğrula</label>
                <input asp-for="ConfirmPassword" class="form-control" />
            </div>

            <div class="form-group my-3 d-flex justify-content-center">
                <button type="submit" class="btn btn-secondary" asp-action="Reset">Değiştir</button>
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>