@model EtkinlikListViewModel

<div class="row">
    <div class="col-md-12">

        <div class="text-center">
            <h6 class="display-6">@Model.Etkinlik.Title</h6>
            <img src="@(string.IsNullOrEmpty(Model.Etkinlik.ImageUrl) ? "/images/default-event.png" : Model.Etkinlik.ImageUrl)"
                alt="Etkinlik görseli" class="img-fluid my-3" style="max-height:300px; object-fit:cover;" />
            <div class="mb-2">
                <span class="badge bg-primary">Başlangıç: @Model.Etkinlik.StartDate.ToString("dd.MM.yyyy HH:mm")</span>
                <span class="badge bg-secondary">Bitiş: @Model.Etkinlik.EndDate.ToString("dd.MM.yyyy HH:mm")</span>
            </div>
            <div class="lead text-start" style="max-width:700px; margin:auto;">
                @Html.Raw(Model.Etkinlik.LongDescription)
            </div>
            <div class="text-center mt-4">
                <div class="btn-group">
                    <a class="btn btn-outline-secondary my-2" asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-house"></i>
                        Ana Sayfa
                    </a>
                    <a class="btn btn-outline-secondary my-2 mx-1" asp-controller="Etkinlik" asp-action="Index">
                        <i class="fa-solid fa-list"></i>
                        Etkinlikler
                    </a>
                </div>
            </div>
            <div class="row justify-content-center mt-4">
                @foreach (Etkinlik item in Model.Etkinlikler)
                {
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2 d-flex align-items-stretch mb-3">
                        <partial name="_EtkinlikCardSmall" model="item" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>